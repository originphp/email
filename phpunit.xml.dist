<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    colors="true"
    processIsolation="false"
    stopOnFailure="false"
    bootstrap="vendor/autoload.php"
    backupGlobals="true"
    >
    <testsuites>
        <testsuite name="Origin Email">
            <directory>./tests/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">./src/</directory>
        </whitelist>
    </filter>
    <php>
       <const name="PHPUNIT" value="true"/>
       <env name="ORIGIN_ENV" value="test"/>

        <!-- Set email account configuration here
        <env name="EMAIL_ADDRESS" value="your-account@gmail.com"/>
        <env name="EMAIL_HOST" value="smtp.gmail.com"/>
        <env name="EMAIL_USERNAME" value="your-account@gmail.com"/>
        <env name="EMAIL_PASSWORD" value="secret"/>
        <env name="EMAIL_PORT" value="465"/>
        <env name="EMAIL_SSL" value="1"/>
        <env name="EMAIL_TLS" value="0"/>
        -->
    </php>
</phpunit>
